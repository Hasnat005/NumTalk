generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum OperationType {
  START
  ADD
  SUBTRACT
  MULTIPLY
  DIVIDE
}

model User {
  id           Int           @id @default(autoincrement())
  username     String        @unique
  passwordHash String
  createdAt    DateTime      @default(now())
  calculations Calculation[]
}

model Calculation {
  id        Int            @id @default(autoincrement())
  operation OperationType
  operand   Float?
  result    Float
  parentId  Int?
  authorId  Int
  createdAt DateTime        @default(now())

  parent   Calculation?     @relation("CalculationHierarchy", fields: [parentId], references: [id])
  children Calculation[]    @relation("CalculationHierarchy")
  author   User             @relation(fields: [authorId], references: [id])

  @@index([parentId])
  @@index([authorId])
}
